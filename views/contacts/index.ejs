<!-- views/contacts/index.ejs -->

<!DOCTYPE html>
<html>
    <!-- include를 사용하여 외부 ejs를 가져옴 -->
    <head>
        <!-- 1 -->
        <%- include('../partials/head') %>
    </head>
    <body>
        <!-- 2 -->
        <%- include('../partials/nav') %>

        <!-- forEach를 사용해 코드를 반복해서 표시함 -->
        <div class="contact contact-index">
            <h2>Index</h2>
            <ul>
                <% contacts.forEach(function(contact) { %>
                <!-- 3 -->
                <li><%= contact.name %></li>
                <% }) %>
            </ul>
        </div>
    </body>
</html>
